<link rel="stylesheet" href="stylesheets/custom.css" />
<!DOCTYPE html>
<html>
  <head>
  
	</div>
    <title>LocationSharingApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <div class="row h-10 float-right mr-1">
      <div class="col-sm-4 float-right text-center">
        <input class="btn btn-cust" type="button" value="Home" onclick="window.location.href = '/'" style="margin-top:10px;"/>
      </div>
    </div>
  </head>
  

  <body>
    <%= yield %>
    <title>LOCATION SHARING APPLICATION</title>
    </br>
    </br>
    <div class="mt-20"> 
      <h4> <b>Other users:</b> </h4>
      </br>
      <div class="table-wrapper-scroll-y my-custom-scrollbar">
        <table class="table table-light table-hover">
          <thead class="thead-dark">
            <tr>
              <th> Username </th>
              <th> Email </th>
              <th> Show Details </th>
            </tr>
          </thead>

          <tbody>
            <% if @users_list.present? %>
              <% @users_list.each do |user| %>
                <tr>
                  <td><%= user["username"] %></td>
                  <td><%= user["email"] %></td>
                  <td><%= user["details_button"].html_safe %></td>                
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="3"> No Other Users Available </td>              
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>

<script>
    function show_user_details(username){
      window.open("/"+username, "_blank");
    } 
</script>